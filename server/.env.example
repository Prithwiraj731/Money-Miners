# ============================================================
# SERVER CONFIGURATION
# ============================================================
PORT=5000

# ============================================================
# DATABASE (Supabase)
# ============================================================
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# ============================================================
# AUTHENTICATION & SECURITY (REQUIRED)
# ============================================================
# JWT Secret - REQUIRED for server to start
# Generate a secure random string (minimum 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# ============================================================
# CORS CONFIGURATION
# ============================================================
# Comma-separated list of allowed origins (no spaces after commas)
# Example: http://localhost:5173,https://moneyminers.in,https://www.moneyminers.in
ALLOWED_ORIGINS=http://localhost:5173

# Legacy (deprecated but kept for backwards compatibility)
FRONTEND_URL=http://localhost:5173

# ============================================================
# EMAIL CONFIGURATION (For contact forms and notifications)
# ============================================================
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-gmail-app-password

# Admin contact emails
ADMIN_EMAIL=tyaseen500@gmail.com
ADMIN_PASS=tyaseen500@gmail.com

# ============================================================
# RATE LIMITING (Optional - defaults provided)
# ============================================================
# Auth Login
RATE_LIMIT_AUTH_LOGIN_MAX=5
RATE_LIMIT_AUTH_LOGIN_WINDOW=900000

# Auth OTP
RATE_LIMIT_AUTH_OTP_MAX=3
RATE_LIMIT_AUTH_OTP_WINDOW=300000

# Auth Register
RATE_LIMIT_AUTH_REGISTER_MAX=10
RATE_LIMIT_AUTH_REGISTER_WINDOW=3600000

# Admin Login
RATE_LIMIT_ADMIN_LOGIN_MAX=3
RATE_LIMIT_ADMIN_LOGIN_WINDOW=900000

# Contact Form
RATE_LIMIT_CONTACT_MAX=3
RATE_LIMIT_CONTACT_WINDOW=600000

# General API
RATE_LIMIT_API_MAX=200
RATE_LIMIT_API_WINDOW=900000
